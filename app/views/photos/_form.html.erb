


<div class="form container">
<%= form_for @photo do |f| %>
  <div class = "form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class = "form-group">
    <%= f.label :date %><br>
     <%= f.date_select :date %>
  </div>
  <div class = "form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :file_location %>
    <%= f.file_field :file_location %>
  </div>

       <style>
      input {
      border-radius: 20px;
      padding-top: 5px;
      padding-bottom: 5px;
      }
      </style>

    <nav>
     <ul class="pager" >
       <li class="text-primary"><%= f.submit  %></li>
       <li><%= link_to ' Cancel', photos_url %></li>
     </ul>
    </nav>

<% end %>
</div>

<% if @photo.errors.present? %>
  <div class="alert alert-danger" role="alert">
    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
    <span class="sr-only">Error:</span>
    <strong>Some errors here !</strong>
  <ul>
    <% @photo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>


